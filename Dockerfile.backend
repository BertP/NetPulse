
# Build Stage
FROM node:20-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Production Stage
FROM node:20-alpine
WORKDIR /app
COPY package*.json ./
RUN npm install --production
COPY --from=builder /app/dist ./dist
# Install discovery deps (nmap for fast network scan, iputils for ping)
RUN apk add --no-cache iputils nmap

EXPOSE 3001
CMD ["node", "dist/index.js"]
